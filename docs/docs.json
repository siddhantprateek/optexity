{
    "$schema": "https://mintlify.com/docs.json",
    "name": "Optexity Documentation",
    "theme": "mint",
    "colors": {
        "primary": "#16A34A",
        "light": "#07C983",
        "dark": "#15803D"
    },
    "favicon": "/logo/Optexity_logo_small.svg",
    "navigation": {
        "tabs": [
            {
                "tab": "Guides",
                "groups": [
                    {
                        "group": "Getting Started",
                        "pages": [
                            "/docs/installation",
                            "/docs/getting-started",
                            "/docs/inference-api"
                        ]
                    },
                    {
                        "group": "Building Automations",
                        "pages": [
                            "/docs/quickstart",
                            "/docs/core-concepts",
                            "/docs/locators",
                            "/docs/parameters-variables"
                        ]
                    },
                    {
                        "group": "Action Types",
                        "pages": [
                            "/docs/interaction-actions",
                            "/docs/extraction-actions",
                            "/docs/control-flow",
                            "/docs/two-factor-auth"
                        ]
                    },
                    {
                        "group": "Advanced",
                        "pages": [
                            "/docs/timing-retries",
                            "/docs/downloads-files",
                            "/docs/agentic-tasks",
                            "/docs/best-practices"
                        ]
                    }
                ]
            },
            {
                "tab": "API Reference",
                "groups": [
                    {
                        "group": "Schema Reference",
                        "pages": [
                            "/api-reference/automation-schema",
                            "/api-reference/interaction-actions-ref",
                            "/api-reference/extraction-actions-ref",
                            "/api-reference/assertion-actions-ref",
                            "/api-reference/misc-actions-ref"
                        ]
                    },
                    {
                        "group": "HTTP API",
                        "pages": [
                            "/api-reference/introduction",
                            "/api-reference/inference-endpoint",
                            "/api-reference/health-endpoints"
                        ]
                    }
                ]
            }
        ],
        "global": {
            "anchors": [
                {
                    "anchor": "Documentation",
                    "href": "https://docs.optexity.com",
                    "icon": "book-open-cover"
                },
                {
                    "anchor": "Blog",
                    "href": "https://optexity.com/blog",
                    "icon": "newspaper"
                }
            ]
        }
    },
    "logo": {
        "light": "/logo/logo_optexity_black.svg",
        "dark": "/logo/logo_optexity.svg"
    },
    "navbar": {
        "links": [
            {
                "label": "Support",
                "href": "mailto:founders@optexity.com"
            }
        ],
        "primary": {
            "type": "button",
            "label": "Main Website",
            "href": "https://optexity.com"
        }
    },
    "contextual": {
        "options": ["copy", "view", "chatgpt", "claude", "perplexity", "mcp", "cursor", "vscode"]
    },
    "footer": {
        "socials": {
            "x": "https://x.com/optexity",
            "linkedin": "https://www.linkedin.com/company/optexity"
        }
    }
}
